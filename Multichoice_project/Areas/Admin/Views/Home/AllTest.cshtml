@using Multichoice_project.Models;
@{
    ViewData["Title"] = "CreateTest";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    //tên user
    ViewData["UserLogin"] = "Tín";
    ViewData["UserLoginFirst"] = "T";

    ViewData["Test-active"]="active";
    ViewData["Test-all"]="active";
    ViewData["Nav-open-test"] = "side-nav-opened";
    ViewData["Display-submenu-test"] = "display: block";
}
<div class="py-4 px-3 px-md-4">
    <div class="card mb-3 mb-md-4">
        <div class="card-body" style="overflow-x: overlay;">
            <!-- Breadcrumb -->
            @*<nav class="d-none d-md-block" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Users</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">All Users</li>
                </ol>
            </nav>*@
            <!-- End Breadcrumb -->

            <div class="mb-3 mb-md-4 d-flex justify-content-between">
                <div class="h3 mb-0">Tests</div>
            </div>


            <!-- Users -->
            <div class="table-responsive-xl">
                <table class="table text-nowrap mb-0">
                    <thead>
                        <tr>
                            <th class="font-weight-semi-bold border-top-0 py-2">ID</th>
                            <th class="font-weight-semi-bold border-top-0 py-2" style="width:250px">Name</th>
                            <th class="font-weight-semi-bold border-top-0 py-2">Time</th>
                            <th class="font-weight-semi-bold border-top-0 py-2">Created time</th>
                            @*<th class="font-weight-semi-bold border-top-0 py-2">Status</th>*@
                            <th class="font-weight-semi-bold border-top-0 py-2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Test test in ViewBag.Test)
                        {
                            <tr>
                                <td class="py-3">@test.Id</td>
                                <td class="align-middle py-3">
                                    <div class=" align-items-center" style="width:400px; overflow-x: auto;">

                                        @test.Name
                                        
                                    </div>
                                </td>
                                <td class="py-3">@test.Time (minute)</td>
                                <td class="py-3">@test.CreatedTime</td>
                                @*<td class="py-3">
                                    <span class="badge badge-pill badge-success">Verified</span>
                                </td>*@
                                <td class="py-3">
                                    <div class="position-relative">
                                        <a class="link-dark d-inline-block" href="/Admin/Home/EditTest/@test.Id">
                                            <i class="gd-pencil icon-text"></i>
                                        </a>
                                        <a class="link-dark d-inline-block" href="/Admin/Home/DeleteTest/@test.Id">
                                            <i class="gd-trash icon-text"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
            </div>
            <!-- End Users -->
        </div>
    </div>


</div>

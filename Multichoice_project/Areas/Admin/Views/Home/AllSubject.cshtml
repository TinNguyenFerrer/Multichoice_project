@using Multichoice_project.Models;
@{
    ViewData["Title"] = "Subject";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var i = 1;
    ViewData["UserLogin"] = "Tín";
    ViewData["UserLoginFirst"] = "T";

    ViewData["Subject-active"] = "active";
    ViewData["Subject-all"] = "active";
    ViewData["Nav-open-subject"] = "side-nav-opened";
    ViewData["Display-submenu-subject"] = "display: block";
}

<div class="py-4 px-3 px-md-4">
    <div class="card mb-3 mb-md-4">
        <div class="card-body" style="overflow-x: overlay;">

            <div class="mb-3 mb-md-4 d-flex justify-content-between">
                <div class="h3 mb-0">Subject</div>
            </div>

            <div class="table-responsive-xl">
                <table class="table text-nowrap mb-0">
                    <thead>
                        <tr>
                            <th class="font-weight-semi-bold border-top-0 py-2">#</th>
                            <th class="font-weight-semi-bold border-top-0 py-2">Name Of Subject</th>
                            <th class="font-weight-semi-bold border-top-0 py-2">Education Field</th>
                            <th class="font-weight-semi-bold border-top-0 py-2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Subject subject in ViewBag.Subject)
                        {
                            <tr>
                                <td class="py-3">@i</td>
                                <td class="py-3">@subject.Name</td>
                                <td class="py-3">@subject.EducationalField.Name</td>
                                <td class="py-3">
                                    <div class="position-relative">
                                        <a class="link-dark d-inline-block" href="/Admin/Home/EditSubject/@subject.Id">
                                            <i class="gd-pencil icon-text"></i>
                                        </a>
                                        <a class="link-dark d-inline-block" href="/Admin/Home/DeleteSubject/@subject.Id">
                                            <i class="gd-trash icon-text"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

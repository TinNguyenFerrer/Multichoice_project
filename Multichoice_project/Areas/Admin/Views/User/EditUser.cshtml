@using Multichoice_project.Models;
@{
    ViewData["Title"] = "AllUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

     ViewData["UserLogin"] = ViewBag.UserLogin;
    ViewData["UserLoginFirst"] = ViewBag.UserLogin[0];

    ViewData["User-active"] = "active";
    ViewData["User-all"] = "active";
    ViewData["Nav-open-user"] = "side-nav-opened";
    ViewData["Display-submenu-user"] = "display: block";
}
<div class="py-4 px-3 px-md-4">
    <div class="card mb-3 mb-md-4">
        <div class="card-body" style="overflow-x: overlay;">
            <div class="table-responsive-xl">
                <form action="/Admin/User/EditUser" method="post">
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <label for="name">Full Name</label>
                            <input type="text" class="form-control" value="@ViewBag.User.FullName" id="name" name="FullName" placeholder="User Name" maxlength="20" required>
                            <input type="number" class="form-control d-none" value="@ViewBag.User.Id" id="name" name="Id" placeholder="User Name" required>
                        </div>
                        <div class="form-group col-12 col-md-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" value="@ViewBag.User.Email" id="email" name="Email" placeholder="User Email" maxlength="20" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <label for="password">User Name</label>
                            <input type="text" class="form-control" value="@ViewBag.User.UserName" id="password" name="UserName" placeholder="User Name" maxlength="10" required>
                        </div>
                        <div class="form-group col-12 col-md-6">
                            <label for="password_confirm">Password</label>
                            <input type="password" class="form-control" value="" id="password_confirm" name="PassWord" placeholder="Password" maxlength="10" required>
                        </div>
                    </div>
                    <div class="custom-control custom-switch mb-2">
                        @{
                            if (@ViewBag.User.RoleName == "Admin")
                            {
                                <input type="checkbox" class="custom-control-input" id="isAdmin" name="RoleName" value="Admin" checked>
                            }
                                else
                            {
                                <input type="checkbox" class="custom-control-input" id="isAdmin" name="RoleName" value="Admin">
                            }
                        }
                        <input type="checkbox" class="custom-control-input" id="isAdmin" name="RoleName" value="Admin">
                        <label class="custom-control-label" for="isAdmin">Set Admin</label>
                    </div>

                    <button type="submit" class="btn btn-primary float-right">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>
